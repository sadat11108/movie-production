<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieproductionhouse.Tazwar_2310259.Actor.ActorViewScensController">
    <children>
        <Label layoutX="250.0" layoutY="20.0" text="View Assigned Scenes and Dialogues">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Your Assigned Scenes:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="scenesTableView" layoutX="30.0" layoutY="100.0" prefHeight="200.0" prefWidth="740.0">
            <columns>
                <TableColumn fx:id="sceneNumberTableColumn" prefWidth="100.0" text="Scene No" />
                <TableColumn fx:id="movieTitleTableColumn" prefWidth="150.0" text="Movie Title" />
                <TableColumn fx:id="sceneDescriptionTableColumn" prefWidth="250.0" text="Scene Description" />
                <TableColumn fx:id="shootingDateTableColumn" prefWidth="120.0" text="Shooting Date" />
                <TableColumn fx:id="locationTableColumn" prefWidth="120.0" text="Location" />
            </columns>
        </TableView>

        <Line endX="690.0" layoutX="80.0" layoutY="330.0" startX="-50.0" />

        <Label layoutX="30.0" layoutY="350.0" text="Scene Details and Dialogues:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="380.0" text="Selected Scene Number:" />
        <Label fx:id="selectedSceneLabel" layoutX="180.0" layoutY="380.0" prefWidth="100.0" style="-fx-background-color: #e0e0e0; -fx-padding: 5;" text="None" />

        <Label layoutX="30.0" layoutY="415.0" text="Dialogue Script:" />
        <TextArea fx:id="dialogueTextArea" editable="false" layoutX="30.0" layoutY="440.0" prefHeight="140.0" prefWidth="740.0" wrapText="true">
            <font>
                <Font size="13.0" />
            </font>
        </TextArea>

        <Button fx:id="viewSceneDetailsButton" layoutX="30.0" layoutY="595.0" mnemonicParsing="false" onAction="#viewSceneDetailsButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="View Scene Details">
            <font>
                <Font size="13.0" />
            </font>
        </Button>

        <Button fx:id="backToDashboardButton" layoutX="590.0" layoutY="595.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="Back to Dashboard">
            <font>
                <Font size="13.0" />
            </font>
        </Button>

        <Label fx:id="statusLabel" alignment="CENTER" layoutX="30.0" layoutY="310.0" prefHeight="25.0" prefWidth="740.0" style="-fx-background-color: #d0f0d0;" />
    </children>
</AnchorPane>
