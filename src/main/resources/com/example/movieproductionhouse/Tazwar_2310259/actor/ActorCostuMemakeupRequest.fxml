<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieproductionhouse.Tazwar_2310259.Actor.ActorCostumeMakeupRequest">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Costume and Makeup Request">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Line endX="620.0" layoutX="50.0" layoutY="60.0" startX="-20.0" />

        <Label layoutX="30.0" layoutY="80.0" text="Request Date:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <DatePicker fx:id="requestDatePicker" layoutX="150.0" layoutY="77.0" onAction="#requestDatePickerOnAction" prefWidth="200.0" />

        <Label layoutX="380.0" layoutY="80.0" text="Request Type:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <ComboBox fx:id="requestTypeComboBox" layoutX="490.0" layoutY="77.0" onAction="#requestTypeComboBoxOnAction" prefWidth="180.0" promptText="Select Type" />

        <Label layoutX="30.0" layoutY="125.0" text="Item Description:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextArea fx:id="itemDescriptionTextArea" layoutX="30.0" layoutY="150.0" prefHeight="80.0" prefWidth="640.0" promptText="Describe the costume or makeup items needed..." wrapText="true" />

        <Label layoutX="30.0" layoutY="245.0" text="Additional Notes:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextArea fx:id="notesTextArea" layoutX="30.0" layoutY="270.0" prefHeight="80.0" prefWidth="640.0" promptText="Any special requirements or preferences..." wrapText="true" />

        <Button fx:id="submitRequestButton" layoutX="30.0" layoutY="365.0" mnemonicParsing="false" onAction="#submitRequestButtonOnAction" prefHeight="35.0" prefWidth="200.0" text="Submit Request">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>

        <Button fx:id="backToDashboardButton" layoutX="470.0" layoutY="365.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" prefHeight="35.0" prefWidth="200.0" text="Back to Dashboard">
            <font>
                <Font size="13.0" />
            </font>
        </Button>

        <Line endX="620.0" layoutX="50.0" layoutY="425.0" startX="-20.0" />

        <Label layoutX="30.0" layoutY="440.0" text="Previous Requests:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="requestHistoryTableView" layoutX="30.0" layoutY="470.0" prefHeight="130.0" prefWidth="640.0">
            <columns>
                <TableColumn fx:id="requestIdTableColumn" prefWidth="80.0" text="Request ID" />
                <TableColumn fx:id="dateTableColumn" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="typeTableColumn" prefWidth="120.0" text="Type" />
                <TableColumn fx:id="itemTableColumn" prefWidth="200.0" text="Item" />
                <TableColumn fx:id="statusTableColumn" prefWidth="140.0" text="Status" />
            </columns>
        </TableView>

        <Label fx:id="statusLabel" alignment="CENTER" layoutX="30.0" layoutY="610.0" prefHeight="25.0" prefWidth="640.0" style="-fx-background-color: #d0f0d0;" />
    </children>
</AnchorPane>
