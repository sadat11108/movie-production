<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieproductionhouse.ActorViewScheduleController">
    <children>
        <Label layoutX="280.0" layoutY="20.0" text="View Shooting Schedule">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Filter by Date:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <DatePicker fx:id="filterDatePicker" layoutX="130.0" layoutY="67.0" prefWidth="160.0" />

        <Button layoutX="310.0" layoutY="67.0" mnemonicParsing="false" onAction="#filterByDateButtonOnAction" prefHeight="25.0" prefWidth="120.0" text="Filter" />

        <Button layoutX="450.0" layoutY="67.0" mnemonicParsing="false" onAction="#showAllSchedulesButtonOnAction" prefHeight="25.0" prefWidth="120.0" text="Show All" />

        <Label layoutX="30.0" layoutY="115.0" text="Your Shooting Schedule:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="scheduleTableView" layoutX="30.0" layoutY="145.0" prefHeight="350.0" prefWidth="740.0">
            <columns>
                <TableColumn fx:id="dateTableColumn" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="timeTableColumn" prefWidth="100.0" text="Time" />
                <TableColumn fx:id="movieTitleTableColumn" prefWidth="150.0" text="Movie" />
                <TableColumn fx:id="sceneNumberTableColumn" prefWidth="80.0" text="Scene No" />
                <TableColumn fx:id="locationTableColumn" prefWidth="170.0" text="Location" />
                <TableColumn fx:id="statusTableColumn" prefWidth="120.0" text="Status" />
            </columns>
        </TableView>

        <Label layoutX="30.0" layoutY="510.0" text="Next Shooting Date:" />
        <Label fx:id="nextShootingDateLabel" layoutX="160.0" layoutY="510.0" text="Not scheduled" style="-fx-background-color: #ffffcc; -fx-padding: 5;" prefWidth="200.0">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="540.0" text="Next Location:" />
        <Label fx:id="nextLocationLabel" layoutX="160.0" layoutY="540.0" text="N/A" style="-fx-background-color: #ffffcc; -fx-padding: 5;" prefWidth="200.0">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>

        <Button layoutX="590.0" layoutY="525.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="Back to Dashboard">
            <font>
                <Font size="13.0" />
            </font>
        </Button>

        <Label fx:id="statusLabel" alignment="CENTER" layoutX="400.0" layoutY="510.0" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: #d0f0d0;" />
    </children>
</AnchorPane>
