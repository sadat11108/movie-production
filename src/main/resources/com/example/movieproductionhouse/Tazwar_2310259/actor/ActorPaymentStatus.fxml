        <ComboBox fx:id="statusFilterComboBox" layoutX="140.0" layoutY="77.0" prefWidth="150.0" promptText="All Payments" />

        <Button layoutX="310.0" layoutY="77.0" mnemonicParsing="false" onAction="#filterPaymentsButtonOnAction" prefHeight="25.0" prefWidth="100.0" text="Filter" />

        <Button layoutX="430.0" layoutY="77.0" mnemonicParsing="false" onAction="#refreshPaymentsButtonOnAction" prefHeight="25.0" prefWidth="100.0" text="Refresh" />

        <Label layoutX="30.0" layoutY="120.0" text="Payment History:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="paymentHistoryTableView" layoutX="30.0" layoutY="150.0" prefHeight="300.0" prefWidth="740.0">
