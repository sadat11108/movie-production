    <children>
        <Label layoutX="280.0" layoutY="20.0" text="Payment Status">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Line endX="440.0" layoutX="129.0" layoutY="60.0" startX="-100.0" />

        <Label layoutX="30.0" layoutY="80.0" text="Filter by Status:">
