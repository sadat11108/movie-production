                <TableColumn fx:id="paymentIdTableColumn" prefWidth="100.0" text="Payment ID" />
                <TableColumn fx:id="dateTableColumn" prefWidth="110.0" text="Date" />
                <TableColumn fx:id="movieTableColumn" prefWidth="150.0" text="Movie" />
                <TableColumn fx:id="descriptionTableColumn" prefWidth="180.0" text="Description" />
                <TableColumn fx:id="amountTableColumn" prefWidth="100.0" text="Amount" />
                <TableColumn fx:id="statusTableColumn" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <Line endX="440.0" layoutX="129.0" layoutY="475.0" startX="-100.0" />

        <Label layoutX="30.0" layoutY="490.0" text="Total Paid:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label fx:id="totalPaidLabel" layoutX="130.0" layoutY="490.0" prefWidth="150.0" style="-fx-background-color: aqua;" text="$0.00">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label layoutX="320.0" layoutY="490.0" text="Total Pending:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label fx:id="totalPendingLabel" layoutX="450.0" layoutY="490.0" prefWidth="150.0" style="-fx-background-color: aqua;" text="$0.00">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Button layoutX="30.0" layoutY="535.0" mnemonicParsing="false" onAction="#viewPaymentDetailsButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="View Payment Details" />

        <Button layoutX="230.0" layoutY="535.0" mnemonicParsing="false" onAction="#downloadPaymentReportButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="Download Report" />

        <Button layoutX="590.0" layoutY="535.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="Back to Dashboard" />
    </children>
