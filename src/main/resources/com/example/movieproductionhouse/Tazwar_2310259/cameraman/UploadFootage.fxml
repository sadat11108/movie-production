<AnchorPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieproductionhouse.Tazwar_2310259.cameraman.UploadFootageController">
    <children>
        <Label layoutX="220.0" layoutY="20.0" text="Upload Footage After Shoot">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Line endX="570.0" layoutX="50.0" layoutY="60.0" startX="-20.0" />

        <Label layoutX="30.0" layoutY="85.0" text="Select Movie Project:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ComboBox fx:id="movieProjectComboBox" layoutX="200.0" layoutY="82.0" prefWidth="420.0" promptText="Select a movie project" />

        <Label layoutX="30.0" layoutY="130.0" text="Scene Number:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="sceneNumberTextField" layoutX="200.0" layoutY="127.0" prefWidth="150.0" promptText="Enter scene number" />

        <Label layoutX="30.0" layoutY="175.0" text="Take Number:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="takeNumberTextField" layoutX="200.0" layoutY="172.0" prefWidth="150.0" promptText="Enter take number" />

        <Label layoutX="30.0" layoutY="220.0" text="Select Video File:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="filePathTextField" editable="false" layoutX="200.0" layoutY="217.0" prefWidth="320.0" promptText="No file selected" />

        <Button layoutX="535.0" layoutY="217.0" mnemonicParsing="false" onAction="#browseFileButtonOnAction" prefHeight="25.0" prefWidth="85.0" text="Browse">
            <font>
                <Font size="12.0" />
            </font>
        </Button>

        <Label layoutX="30.0" layoutY="265.0" text="File Type:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Label fx:id="fileTypeLabel" layoutX="200.0" layoutY="265.0" text="N/A" style="-fx-background-color: #e0e0e0; -fx-padding: 3;" prefWidth="100.0" />

        <Label layoutX="330.0" layoutY="265.0" text="File Size:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <Label fx:id="fileSizeLabel" layoutX="420.0" layoutY="265.0" text="0 MB" style="-fx-background-color: #e0e0e0; -fx-padding: 3;" prefWidth="100.0" />

        <Line endX="570.0" layoutX="50.0" layoutY="310.0" startX="-20.0" />

        <Button layoutX="30.0" layoutY="330.0" mnemonicParsing="false" onAction="#uploadFootageButtonOnAction" prefHeight="40.0" prefWidth="280.0" text="Upload Footage">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <Button layoutX="340.0" layoutY="330.0" mnemonicParsing="false" onAction="#clearFormButtonOnAction" prefHeight="40.0" prefWidth="130.0" text="Clear Form" />

        <Button layoutX="490.0" layoutY="330.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" prefHeight="40.0" prefWidth="130.0" text="Back to Dashboard" />

        <Label fx:id="uploadProgressLabel" alignment="CENTER" layoutX="30.0" layoutY="390.0" prefHeight="30.0" prefWidth="590.0" style="-fx-background-color: #e0e0e0;">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <Label fx:id="statusLabel" alignment="CENTER" layoutX="30.0" layoutY="435.0" prefHeight="40.0" prefWidth="590.0" style="-fx-background-color: #d0f0d0;">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
