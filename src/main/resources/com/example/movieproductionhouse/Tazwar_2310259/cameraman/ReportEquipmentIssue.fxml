<AnchorPane prefHeight="499.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieproductionhouse.Tazwar_2310259.cameraman.ReportEquipmentIssueController">
    <children>
        <Label layoutX="230.0" layoutY="20.0" text="Report Equipment Issue">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Line endX="670.0" layoutX="50.0" layoutY="60.0" startX="-20.0" />

        <Label layoutX="30.0" layoutY="80.0" text="Equipment Name:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="equipmentNameTextField" layoutX="180.0" layoutY="77.0" prefWidth="490.0" promptText="Enter equipment name or ID" />

        <Label layoutX="30.0" layoutY="125.0" text="Severity Level:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ComboBox fx:id="severityComboBox" layoutX="180.0" layoutY="122.0" prefWidth="200.0" promptText="Select severity" />

