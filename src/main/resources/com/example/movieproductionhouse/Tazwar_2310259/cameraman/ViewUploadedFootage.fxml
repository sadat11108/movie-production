<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieproductionhouse.Tazwar_2310259.cameraman.ViewUploadedFootageController">
    <children>
        <Label layoutX="270.0" layoutY="20.0" text="View Previously Uploaded Footage">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Filter by Movie:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <ComboBox fx:id="movieFilterComboBox" layoutX="140.0" layoutY="67.0" prefWidth="200.0" promptText="All Movies" />

        <Label layoutX="360.0" layoutY="70.0" text="Search Scene:">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextField fx:id="sceneSearchTextField" layoutX="460.0" layoutY="67.0" prefWidth="120.0" promptText="Scene No" />

        <Button layoutX="600.0" layoutY="67.0" mnemonicParsing="false" onAction="#searchButtonOnAction" prefHeight="25.0" prefWidth="100.0" text="Search" />

        <Button layoutX="720.0" layoutY="67.0" mnemonicParsing="false" onAction="#showAllButtonOnAction" prefHeight="25.0" prefWidth="100.0" text="Show All" />

        <Label layoutX="30.0" layoutY="115.0" text="Uploaded Footage:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <TableView fx:id="footageTableView" layoutX="30.0" layoutY="145.0" prefHeight="320.0" prefWidth="790.0">
            <columns>
                <TableColumn fx:id="fileIdTableColumn" prefWidth="80.0" text="File ID" />
                <TableColumn fx:id="movieTableColumn" prefWidth="130.0" text="Movie" />
                <TableColumn fx:id="sceneTableColumn" prefWidth="70.0" text="Scene" />
                <TableColumn fx:id="takeTableColumn" prefWidth="60.0" text="Take" />
                <TableColumn fx:id="uploadDateTableColumn" prefWidth="120.0" text="Upload Date" />
                <TableColumn fx:id="uploadTimeTableColumn" prefWidth="100.0" text="Upload Time" />
                <TableColumn fx:id="fileSizeTableColumn" prefWidth="100.0" text="File Size" />
                <TableColumn fx:id="statusTableColumn" prefWidth="130.0" text="Status" />
            </columns>
        </TableView>

        <Line endX="760.0" layoutX="60.0" layoutY="485.0" startX="-30.0" />

        <Label layoutX="30.0" layoutY="500.0" text="Selected File Details:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="535.0" text="File Name:" />
        <Label fx:id="fileNameLabel" layoutX="120.0" layoutY="535.0" prefWidth="300.0" style="-fx-background-color: #e0e0e0; -fx-padding: 3;" text="Not selected" />

        <Label layoutX="450.0" layoutY="535.0" text="File Location:" />
        <Label fx:id="fileLocationLabel" layoutX="560.0" layoutY="535.0" prefWidth="260.0" style="-fx-background-color: #e0e0e0; -fx-padding: 3;" text="N/A" />

        <Button layoutX="30.0" layoutY="575.0" mnemonicParsing="false" onAction="#viewFootageButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="View Selected Footage">
            <font>
                <Font size="12.0" />
            </font>
        </Button>

        <Button layoutX="430.0" layoutY="575.0" mnemonicParsing="false" onAction="#refreshListButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="Refresh List" />

        <Button layoutX="640.0" layoutY="575.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" prefHeight="35.0" prefWidth="180.0" text="Back to Dashboard" />
    </children>
</AnchorPane>
